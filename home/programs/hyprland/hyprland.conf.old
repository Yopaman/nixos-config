
########################################################################################
AUTOGENERATED HYPR CONFIG.
PLEASE USE THE CONFIG PROVIDED IN THE GIT REPO /examples/hypr.conf AND EDIT IT,
OR EDIT THIS ONE ACCORDING TO THE WIKI INSTRUCTIONS.
########################################################################################


#
# Please note not all available settings / options are set here.
# For a full list, see the wiki (basic and advanced configuring)
#

source=~/.config/hypr/mocha.conf

monitor=,preferred,auto,1

input {
    kb_file=
    kb_layout=fr
    kb_variant=
    kb_model=
    kb_options=
    kb_rules=

    follow_mouse=2

    touchpad {
        natural_scroll=no
        disable_while_typing=1
        tap-to-click=false
    }

    sensitivity=0 # -1.0 - 1.0, 0 means no modification.
}

general {
   # main_mod=SUPER

    gaps_in=5
    gaps_out=10
    border_size=3
    col.active_border=$text
    col.inactive_border=$surface0
    col.group_border=$surface0
    col.group_border_active=$peach
    apply_sens_to_raw=0 # whether to apply the sensitivity to raw input (e.g. used by games where you aim using your mouse)

}

decoration {
    rounding=10
    multisample_edges=1
    blur=false
    blur_size=20 # minimum 1
    blur_passes=3 # minimum 1
    blur_new_optimizations=1
    blur_ignore_opacity=1
    drop_shadow=true
    shadow_range=14
    col.shadow=0xaa000000
    shadow_offset=-2 2
}

# blurls=gtk-layer-shell
blurls=rofi
blurls=notifications
# blurls=gtk-layer-shell

animations {
    enabled=1
    animation=windows,1,7,default
    animation=border,1,2,default
    animation=fade,1,3,default
    animation=workspaces,1,6,default
}



dwindle {
    pseudotile=0 # enable pseudotiling on dwindle
}

gestures {
    workspace_swipe=yes
}

# example window rules
# for windows named/classed as abc and xyz
#windowrule=move 69 420,abc
#windowrule=size 420 69,abc
#windowrule=tile,xyz
#windowrule=float,abc
#windowrule=pseudo,abc
#windowrule=monitor 0,xyz

windowrule=move size 750 450,scratchterm
windowrule=move move 630 300,scratchterm
windowrule=float,scratchterm
windowrule=tile,neovide

# some nice mouse binds
bindm=SUPER,mouse:272,movewindow
bindm=SUPER,mouse:273,resizewindow

# example binds
bind=SUPER,RETURN,exec,wezterm
bind=SUPER_SHIFT,RETURN,exec,wezterm start --class scratchterm
bind=SUPER,Q,killactive
bind=SUPER_SHIFT,X,exec,powermenu
bind=SUPER,S,togglefloating
bind=SUPER,F,fullscreen
bind=SUPER,D,exec,wofi --show drun -o DP-3 --term wezterm
bind=SUPER,P,pseudo,
bind=SUPER,T,togglegroup
bind=SUPER,Tab,changegroupactive

bind=SUPER,h,movefocus,l
bind=SUPER,l,movefocus,r
bind=SUPER,k,movefocus,u
bind=SUPER,j,movefocus,d

bind=SUPER_SHIFT,h,swapnext
bind=SUPER_SHIFT,l,swapnext

bind=SUPER,ampersand,workspace,1
bind=SUPER,eacute,workspace,2
bind=SUPER,quotedbl,workspace,3
bind=SUPER,apostrophe,workspace,4
bind=SUPER,parenleft,workspace,5
bind=SUPER,minus,workspace,6

bind=SUPER_SHIFT,ampersand,movetoworkspace,1
bind=SUPER_SHIFT,eacute,movetoworkspace,2
bind=SUPER_SHIFT,quotedbl,movetoworkspace,3
bind=SUPER_SHIFT,apostrophe,movetoworkspace,4
bind=SUPER_SHIFT,parenleft,movetoworkspace,5
bind=SUPER_SHIFT,minus,movetoworkspace,6

bind=SUPER,mouse_down,workspace,e+1
bind=SUPER,mouse_up,workspace,e-1

# Volume
bind=,XF86AudioRaiseVolume,exec,pamixer -i 5
bind=,XF86AudioLowerVolume,exec,pamixer -d 5
bind=,XF86AudioMute,exec,pamixer -t

# Utilities
bind=SUPER_SHIFT,S,exec,grim -g "$(slurp)" - | wl-copy -t image/png
bind=SUPER_CTRL,S,exec,~/.local/bin/md_screenshot.sh
bind=SUPER,B,exec,~/.local/bin/toggle_bar.sh

# Music
bind=SUPER_SHIFT,space,exec,playerctl play-pause

exec-once=mako
exec-once=eww open bar_window
exec-once=swayidle -w timeout 300 'swaylock --screenshots --clock --indicator --indicator-radius 100 --indicator-thickness 7 --effect-blur 7x5 --effect-vignette 0.5:0.5 --ring-color b4befe00 --key-hl-color cdd6f4 --line-color 00000000 --inside-color 00000088 --separator-color 00000000 --fade-in 0.2' before-sleep 'swaylock --screenshots --clock --indicator --indicator-radius 100 --indicator-thickness 7 --effect-blur 7x5 --effect-vignette 0.5:0.5 --ring-color b4befe00 --key-hl-color cdd6f4 --line-color 00000000 --inside-color 00000088 --separator-color 00000000 --fade-in 0.2'
exec-once=gammastep -l 42.500050:-73.622150
exec-once=swww init;swww img ~/.config/wallpaper/rei-tux.png
